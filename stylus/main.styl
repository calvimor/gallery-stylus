//VARIABLES

site-bg = #8a9296
bgcolor = #2b2e2f
search-color = #7f7f7f
title-color = white
paragraph-color = #909090
bgcolor = #2b2e2f
accent-color = #8838ff

//MIXINS
border-radius(n)
  border-radius n 
  -webkit-border-radius n 
  -moz-boder-radius n 


placeholder(color)
  &::-webkit-input-placeholder
    color search-color
  &::-moz-input-placeholder
    color search-color
  &::-o-input-placeholder
    color search-color
  &::-ms-input-placeholder
    color search-color


h1, h2, h3, p, a
  font-family Raleway

h1, h2, h3
   color title-color

h2, h3
  font-size 1.4em

p
  color paragraph-color

body
  background-color  site-bg
  padding 6em

header
  background-color  #000
  width 100%
  padding 20px

  img
    height  24px
    width   24px
    cursor  pointer
  
  #search
    background  bgcolor
    border  0
    color search-color
    display inline-block
    width 200px
    height  25px
    float right
    font-size .95em
    margin-bottom 0
    border-radius(15px)
    placeholder(gray)

#content
  background  bgcolor

  h1
    font-weight 300
    font-size 2em
    margin  0

.btn
  color white
  padding 7px 35px
  border-radius 3px
  position   relative
  top 50%
  transform translate(-50%)
  &:hover
    color  white
    font-weight bold

#view-all
  background-color accent-color
  